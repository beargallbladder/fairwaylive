{
  "name": "fairwaylive",
  "version": "1.0.0",
  "description": "Real-time golf scoring app with social betting",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "dev:simple": "node server-simple.js",
    "mobile": "cd mobile && npm start",
    "test": "jest",
    "lint": "eslint src/",
    "build": "cd mobile && eas build --platform all",
    "setup": "npm install && cd mobile && npm install",
    "mcp:start": "node src/mcp/server.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "migrate": "node src/services/database.js",
    "deploy": "./deploy.sh",
    "deploy:render": "git push render main",
    "deploy:vercel": "vercel --prod",
    "quickstart": "./quickstart.sh"
  },
  "keywords": ["golf", "sports", "real-time", "social", "mcp"],
  "author": "FairwayLive Team",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "redis": "^4.6.5",
    "postgres": "^3.3.4",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "dotenv": "^16.0.3",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "@aws-sdk/client-s3": "^3.521.0",
    "openai": "^4.28.0",
    "bull": "^4.10.4",
    "winston": "^3.8.2",
    "@turf/turf": "^6.5.0",
    "geolib": "^3.3.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.5.0",
    "eslint": "^8.38.0",
    "@types/node": "^18.15.11",
    "supertest": "^6.3.3"
  }
}
